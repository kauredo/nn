<section class="contact">
  <div class="about-header">
    <h4>
      If you have a project in mind please fill in the form.
    </h4>
  </div>
  <div class="contact-form">
    <form action="https://formspree.io/f/mwkanber" method="POST">
      <div class="side-inputs">
        <div class="form-group">
          <label class='required' for="input-name">Name</label>
          <input type="text" id="input-name" name="user_name" required/>
        </div>
        <div class="form-group">
          <label for="input-company">Name of your Company</label>
          <input type="text" id="input-company" name="company_name"/>
        </div>
      </div>
      <div class="form-group">
        <label class='required' for="input-email">Email</label>
        <input type="email" id="input-email" name="user_mail" required/>
      </div>
      <div class="form-group">
        <label class='required' for="input-company-description">Describe your company</label>
        <textarea id="input-company-description" name="company_description" required></textarea>
      </div>
      <div class="form-group">
        <label class='required' for="input-project">Describe your project</label>
        <textarea id="input-project" name="project_description" required></textarea>
      </div>
      <div class="form-group">
        <label for="input-message">Further comments</label>
        <textarea id="input-message" name="user_message"></textarea>
      </div>
      <button class="submit-button" id="input-submit" type="submit"><p>Send</p></button>
      <input type="hidden" name="_subject"
      value="New message from kaufmann.com"
      />
    </form>
  </div>
  <div class="contact-bottom">
    <p>contact:</p>
    <p>kaufmann.g99@gmail.com</p>
  </div>
</section>
