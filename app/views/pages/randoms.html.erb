<section class="show">
  <div class="top-show">
    <h1>RANDOM SHOTS</h1>
    <h5>@imkfmnn on instagram</h5>
  </div>
  <div class="randoms">
    <% Dir.glob('app/assets/images/randoms/*').sort.map do |path| %>
      <div class="image-section">
        <%= image_tag "randoms/#{ File.basename(path) }" %>
      </div>
    <% end.reduce(&:+) %>
  </div>
  <div class="scroller">
    <%= link_to fire_path() do %>
      <div class="scroller-section">
        <h2>
          <i class="fas fa-chevron-left"></i>
        </h2>
        <h2 class="subtitle">I saw fire</h2>
      </div>
    <% end %>
  </div>
</section>
